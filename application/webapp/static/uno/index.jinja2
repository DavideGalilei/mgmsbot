<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ game_name }}</title>

    <link href="{{ url_for('static', path=css_path) }}" rel="stylesheet">
    <script src="{{ url_for('static', path=js_path) }}"></script>

    <script>window._lib_url = "{{ url_for('static', path='/multiplayer.js') }}"</script>
</head>
<body>
    <div id="game">
        <div id="players">
        </div>
        <div id="main-deck">
        </div>
        <div id="color-bar" style="display:none;">
            <div id="red" class="color"></div>
            <div id="blue" class="color"></div>
            <div id="yellow" class="color"></div>
            <div id="green" class="color"></div>
        </div>
        <div id="my-deck">
        </div>
        <div id="game-buttons">
            <div id="take-card" class="game-button"><span>take a card</span></div>
            <div id="skip-turn" class="game-button"><span>skip the turn</span></div>
            <div id="say-uno" class="game-button"><span>say UNO</span></div>
        </div>
    </div>
</body>
</html>
